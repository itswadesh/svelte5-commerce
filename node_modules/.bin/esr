#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/lk/svelte5-commerce/node_modules/esbuild-runner/bin/node_modules:/mnt/d/lk/svelte5-commerce/node_modules/esbuild-runner/node_modules:/mnt/d/lk/svelte5-commerce/node_modules:/mnt/d/lk/node_modules:/mnt/d/node_modules:/mnt/d/lk/svelte5-commerce/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/lk/svelte5-commerce/node_modules/esbuild-runner/bin/node_modules:/mnt/d/lk/svelte5-commerce/node_modules/esbuild-runner/node_modules:/mnt/d/lk/svelte5-commerce/node_modules:/mnt/d/lk/node_modules:/mnt/d/node_modules:/mnt/d/lk/svelte5-commerce/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../esbuild-runner/bin/esr.js" "$@"
else
  exec node  "$basedir/../esbuild-runner/bin/esr.js" "$@"
fi
